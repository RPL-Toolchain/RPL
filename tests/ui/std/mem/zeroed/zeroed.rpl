pattern std_mem_zeroed 

patt {
    zeroed_inited_reference[
        $T: ty
    ] = pub fn _ (..) -> _ {
        _ = std::intrinsics::assert_zero_valid::<&$T>();
    }

    zeroed_inited_reference_mut[
        $T: ty
    ] = pub fn _ (..) -> _ {
        _ = std::intrinsics::assert_zero_valid::<&mut $T>();
    }
}